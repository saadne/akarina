<!DOCTYPE html>
<html lang="en">

<%- include('../partiels/head1.ejs')%>

    <body>
        <%- include('../partiels/nav.ejs')%>
            <style>
                .listing-card-snapshot-container span {
                    margin-right: 4rem;
                }
            </style>

            <div class="container " style="margin-top: 4rem;">
                <div class="row">

                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel"
                            style="overflow: hidden;">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="../../../images/apartments/<%=apartment.image_name%>"
                                        class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="../../../images/apartments/<%=apartment.image_name%>"
                                        class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="../../../images/apartments/<%=apartment.image_name%>"
                                        class="d-block w-100" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="listing-card-snapshot-container my-2">
                            <div class="content">
                                <div class=" my-2">
                                    <h3><strong>
                                            <%= apartment.property_type %>
                                        </strong></h3>
                                    <span>
                                        <%= apartment.region %>
                                            <%= apartment.city %>
                                    </span>
                                    <br>
                                    <% if(apartment.add_type=="LOUER" ){ %>
                                        <span>
                                            <%= apartment.add_type %>
                                                <%= apartment.rent_type %>
                                        </span>
                                        <% }else{ %>
                                            <span>
                                                <%= apartment.add_type %>
                                            </span>
                                            <% } %>
                                </div>
                                <div class="buttons">
                                    <a href="/apartments/update-apartment/<%= apartment.id %> "><button
                                            class="btn btn-primary">Modifier</button></a>
                                    <button type="button" class="btn  btn-danger" data-toggle="modal"
                                        data-target="#exampleModal">Delete</button>
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Confirmation de la
                                                        suppression
                                                    </h5>

                                                </div>
                                                <div class="modal-body">
                                                    es-tu s√ªr?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">No, Annuler</button>
                                                    <a class="delete" data-doc="<%= apartment.id %> "><button
                                                            class="btn btn-danger">Oui, Confirm&eacute;</button></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="my-2">
                                <h2 class="listing-card-price"><strong>
                                        <%= apartment.price %> MRU
                                    </strong></h2>
                            </div>
                            <div class="listing-card-snapshot-container my-2">
                                <span>
                                    <%= apartment.number_of_room %> <i class="fas fa-bed"></i>
                                </span>
                                <span>
                                    <%= apartment.number_of_bathroom %> <i class="fas fa-bath"></i>
                                </span>
                                <span>
                                    <%= apartment.number_of_kitchen %> <i class="fas fa-toilet"></i>
                                </span>
                                <span>
                                    <%= apartment.street_size %> <i class="fas fa-th-large"></i>
                                </span>
                            </div>
                            <% if(apartment.has_equipe){ %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="<%= apartment.has_equipe %>"
                                        name="has_equipe" id="flexCheckIndeterminate" <%if (apartment.has_equipe){ %>
                                    checked
                                    <% }else %> >
                                        <label class="form-check-label" for="flexCheckIndeterminate">
                                            Avec Meuble
                                        </label>
                                </div>
                                <% } %>

                        </div>

                        <p>
                            <%= apartment.description %>
                        </p>

                    </div>
                </div>
            </div>
            <%- include('../partiels/footer.ejs')%>
                <script>
                    const transhcan = document.querySelector('a.delete');
                    transhcan.addEventListener('click', (e) => {
                        const endpoint = `/apartments/delete-apartment/${transhcan.dataset.doc}`
                        fetch(endpoint, {
                            method: 'DELETE'
                        })
                            .then((response) => response.json())
                            .then(date => window.location.href = date.redirect)
                            .catch(err => console.log(err))
                    })
                </script>

    </body>

</html>