<!DOCTYPE html>
<html lang="en">

<%- include('../partiels/head.ejs')%>

    <body>
        <%- include('../partiels/nav.ejs')%>
            <div class="container" style="margin-top: 3rem;">
                <div class="row">
                    <div class="col-lg-10 offset-1">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Numero</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users.length> 0) { %>
                                    <% users.forEach((user)=> { %>

                                        <tr>
                                            <th scope="row">
                                                <%= user.id %>
                                            </th>

                                            <td>
                                                <a href="/admin/user-propertys/<%= user.id %>">
                                                    <%= user.name %>
                                                </a>
                                            </td>

                                            <td>
                                                <%= user.phone %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>

                                            <td>
                                                <%= user.role %>
                                            </td>

                                            <td>
                                                <div class="buttons">
                                                    <a href="/admin/update-user/<%= user.id %> "><button
                                                            class="btn btn-primary">Modifier</button></a>
                                                    <form action="/admin/delete-user/:<%= user.id %> " method="POST">
                                                        <input type="hidden" , name="user_id" , value="<%=user.id%>">
                                                        <button style="background-color: rgba(243, 64, 64, 0.905);"
                                                            class="btn btn-danger" type="submit"> Delete </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>

                                        <% })} else{%>
                                            <tr>
                                                <p>no users</p>
                                            </tr>
                                            <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <%- include('../partiels/footer.ejs')%>
    </body>

</html>